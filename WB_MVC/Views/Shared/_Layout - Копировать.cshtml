<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WB_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container">
            <!-- Панель навигации -->
            <span class="nav-color">
                <!-- Панель навигации -->
                <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                    <!-- меню сайта -->
                    <a class="navbar-brand" href="#">WebLabsV06</a>
                    <div class="navbar-nav">
                        <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">LR 2</a>
                        <a class="nav-item nav-link"  asp-controller="Product" asp-action="Index">Каталог</a>
                        <a class="nav-item nav-link" asp-area="Admin" asp-page="/Index">Администрирование</a>
                    </div>
                    <!-- меню сайта - конец -->
                    <!-- Информация пользователя -->
                    <a class="navbar-text ml-auto" asp-controller="Cart" asp-action="Index">
                        00,0 руб <i class="fas fa-shopping-cart nav-color"></i> (0)
                    </a>
                    <div class="dropdown ml-4 nav-color">
                        <div class="dropdown-toggle" id="dropdownMenuButton"
                             data-toggle="dropdown" aria-haspopup="true"
                             aria-expanded="false">
                            <img src="images/depositphotos_12630302-stock-photo-3d-man-showing-thumbs-up.jpg" width="30"
                                 alt="User" class="rounded" />
                        </div>
                        <div class="dropdown-menu"
                             aria-labelledby="dropdownMenuButton">
                            <div class="dropdown-item-text">
                                <img src="images/depositphotos_12630302-stock-photo-3d-man-showing-thumbs-up.jpg" width="50" alt="User" class="rounded" />
                                user@mail.ru
                            </div>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item"  asp-controller="Cart" asp-action="UserProducts">Мои товары</a>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Log off</a>
                        </div>
                    </div>
                    <!-- Информация пользователя - конец -->
                </nav> <!-- Панель навигации - конец -->
                
            </span>
        </div><!-- container - конец -->
    </header><!-- header - конец -->
    <main class="container">
        @RenderBody()
    </main>
    <footer class="">
        <div class="container">
            <span class="nav-color">
                <div class="navbar navbar-dark navbar-expand-md bg-dark">
                    <div class="navbar-nav ml-auto">
                        <a class="nav-item nav-link" href="http://www.facebook.com">
                            <i class="fab fa-facebook-f fa-2x"></i>
                        </a>
                        <a class="nav-item nav-link" href="http://www.vk.com">
                            <i class="fab fa-vk fa-2x"></i>
                        </a>
                        <a class="nav-item nav-link" href="http://www.twitter.com">
                            <i class="fab fa-twitter fa-2x"></i>
                        </a>
                    </div>
                </div>
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
